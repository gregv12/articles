    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.3.3.RELEASE</version>
        <relativePath /> <!-- lookup parent from repository -->
    </parent>
    
    <properties>
        <maven.deploy.skip>true</maven.deploy.skip>
        <netbeans.hint.license>fluxtion</netbeans.hint.license>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <bootstrap.version>4.0.0-2</bootstrap.version>
        <fontawesome.version>5.14.0</fontawesome.version>
        <webjars-locator.version>0.30</webjars-locator.version>
    </properties>

    <groupId>com.fluxtion.integration</groupId>
    <artifactId>fluxtion-integration</artifactId>
    <name>fluxtion :: integration</name>
    <packaging>jar</packaging>
    <version>2.8.1</version>
    
    
    <profiles>
        <profile>
            <id>Windows</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <properties>
                <script.to.execute />
                <script.executor>springbootfix\updateBootJar.bat</script.executor>
            </properties>
        </profile>
        <profile>
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <script.to.execute>springbootfix/updateBootJar.sh</script.to.execute>
                <script.executor>bash</script.executor>
            </properties>
        </profile>
        <profile>
            <id>our-default-profile</id>
            <activation>
                <property>
                    <name>!unsetDefaultProfile</name>
                </property>
            </activation>
            <build>
                <defaultGoal>exec:exec</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>patch-fatjar-fluxtion</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <inherited>false</inherited>
                            </execution>
                        </executions>
                        <configuration>
                            <executable>${script.executor}</executable>
                            <commandlineArgs>${script.to.execute} ${project.version}</commandlineArgs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    
